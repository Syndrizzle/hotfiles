# Based on Bridge by ScionicSpectre and Adwaita by GNOME
# vim:set ts=2 sw=2 sts=2 ai et:
#
# This is the GTK 2 version of oomox-shiki-brave. It's whole purpose is to look as the
# GTK 3 version as much as possible until GTK 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "base_color:#181f21"
gtk-color-scheme = "text_color:#dadada"
# Foreground/background
gtk-color-scheme = "bg_color:#181f21"
gtk-color-scheme = "fg_color:#dadada"
# Selected foreground/background
gtk-color-scheme = "selected_bg_color:#6da4cd"
gtk-color-scheme = "selected_fg_color:#212121"
# Titlebar foreground/background
gtk-color-scheme = "titlebar_bg_color:#22292b"
gtk-color-scheme = "titlebar_fg_color:#dadada"
# Menus
gtk-color-scheme = "menu_color:#181f21"
# Tooltips foreground/background
gtk-color-scheme = "tooltip_bg_color:#575e60"
gtk-color-scheme = "tooltip_fg_color:#dadada"
# Links
gtk-color-scheme = "link_color:#6da4cd"
gtk-color-scheme = "visited_link_color:#ef7d7d"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
