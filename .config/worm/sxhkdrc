# Restart worm
super + ctrl + r
	worm

# Quit worm
ctrl + alt + q
	pkill worm

# Close app
alt + F4
	wormc close-active-client

# Maximize app
super + f
	wormc maximize-active-client

# Minimize app
super + h
	wormc minimize-active-client

# Tags
super + {_, shift + } {1-9}
	wormc {switch,move-active}-tag {1-9}

# Set master windows
super + m
	wormc master-active

# Float a window
super + shift + space
	wormc float-active

# Open terminal
ctrl + alt + t
	alacritty

# Play music
XF86AudioPlay
	playerctl play

# Pause music
XF86AudioPause
	playerctl pause

# Music next
XF86AudioNext
	playerctl next

# Music previous
XF86AudioPrev
	playerctl previous

ctrl + alt + period
	eww -c $HOME/.config/eww/Main/ open-many --toggle background system fetch dots spotify power applications links profile clock weather bluetooth mail karma
