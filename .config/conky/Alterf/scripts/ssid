#!/bin/bash

# A simple script to display wifi name
# 'ssid -i' = with icon, 'ssid' = text only
# Cheers!
# Addy

SSID_NAME=$(/sbin/iwgetid -r | cut -b 1-18)

if [[ "${SSID_NAME}" != "" ]]; then
	if  [[ $1 = "-i" ]]; then
    echo "ï‡«  ${SSID_NAME}"
	else
    echo "${SSID_NAME}"
	fi
else
echo "Not Connected"
fi
